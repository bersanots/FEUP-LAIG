<lxs>
    <scene root="scene" axis_length="5"/>

    <views default="overview">
        <perspective id="front_view" near="0.1" far="500" angle="1">
            <from x="25" y="20" z="25"/>
            <to x="0" y="-2" z="0"/>
        </perspective>
        <perspective id="overview" near="0.5" far="500" angle="0.3">
            <from x="20" y="5" z="50"/>
            <to x="2" y="-5" z="0"/>
        </perspective>
        <perspective id="big_fish" near="0.1" far="500" angle="0.4">
            <from x="13" y="4" z="13"/>
            <to x="0" y="2" z="0"/>
        </perspective>
        <ortho id="orthogonal" near="0.1" far="500" left="-16" right="16" top="9" bottom="-9">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </ortho>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.53" g="0.81" b="0.92" a="1.0" />
    </globals>

    <lights>
        <omni id="middle_light" enabled="1">
            <location x="5" y="2" z="5" w="0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
        <spot id="side_light" enabled="0" angle="55" exponent="20">
            <location x="5" y="4" z="15" w="0" />
            <target x="5" y="0" z="0" />
            <ambient r="0" g="0" b="0" a="0"/>
            <diffuse r="0.5" g="0.5" b="0.5" a="0"/>
            <specular r="0.5" g="0.5" b="0.5" a="0"/>
            <attenuation constant="1" linear="0" quadratic="0" />
        </spot>
        <spot id="top_light" enabled="0" angle="55" exponent="40">
            <location x="10" y="7" z="10" w="0" />
            <target x="0" y="0" z="0" />
            <ambient r="0" g="0" b="0" a="0"/>
            <diffuse r="0.5" g="0.5" b="0.5" a="0"/>
            <specular r="0.5" g="0.5" b="0.5" a="0"/>
            <attenuation constant="1" linear="0" quadratic="0" />
        </spot>
    </lights>

    <textures>
        <texture id="bank" file="scenes/images/bank.jpg" /> 
        <texture id="wood" file="scenes/images/wood.jpg" />
    </textures>

    <materials>
        <material id="defaultMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="grey" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0"/>
            <ambient r="0.9" g="0.9" b="0.9" a="1.0"/>
            <diffuse r="0.9" g="0.9" b="0.9" a="1.0"/>
            <specular r="0.9" g="0.9" b="0.9" a="1.0"/>
        </material>

         <material id="white" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0"/>
            <ambient r="1.0" g="1.0" b="1.0" a="1.0"/>
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
            <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
        </material>

        <material id="black" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0"/>
            <ambient r="0.0" g="0.0" b="0.0" a="1.0"/>
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0"/>
            <specular r="0.0" g="0.0" b="0.0" a="1.0"/>
        </material>

        <material id="woodMaterial" shininess="1">
            <emission r="0.8" g="0.5" b="0" a="1.0" />
            <ambient r="0.8" g="0.5" b="0" a="1.0" />
            <diffuse r="0.8" g="0.0" b="0.0" a="1.0" />
            <specular r="0.2" g="0.5" b="0.0" a="1.0" />
        </material>

      
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations>
        
    </animations>

    <primitives>
        <primitive id = "board">
            <board radius='0.5'/>
        </primitive>
        <primitive id="Rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="Cylinder">
            <cylinder  base="1"  top="1" height="3" slices="10" stacks="10"  />
        </primitive>
    </primitives>


    <components>
        <!--SCENE-->
        <component id="retangleT1">
            <transformation>
                <translate x="-0.5" y="0" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
        <component id="retangleT4">
            <transformation>
                <translate x="0.5" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
        <component id="retangleT5">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
                <rotate axis="y" angle="-180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
        <component id="retangleT6">
            <transformation>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
        <component id="retangle2">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
        <component id="retangle3">
            <transformation>
                <translate x="0" y="-0.5" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
       <component id="leg1">
            <transformation>
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>
        <component id="leg2">
            <transformation>
                <translate x="0" y="0" z="20" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>
        <component id="leg3">
            <transformation>
                <translate x="30" y="0" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>
        <component id="leg4">
            <transformation>
                <translate x="30" y="0" z="20" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>

         <component id="board_comp">        
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <animations></animations>
            <materials>
                <material id="black" />
            </materials>
            <texture id="none"/>   
            <children>
                <componentref id="board" />
                <componentref id="board_sides" />
            </children>
        </component>

        <component id="board_sides">        
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <animations></animations>
            <materials>
                <material id="black" />
            </materials>
            <texture id="none"/>   
            <children>
                <componentref id="board_side1" />
                <componentref id="board_side2" />
                <componentref id="board_side3" />
                <componentref id="board_side4" />
                <componentref id="board_side5" />
                <componentref id="board_side6" />
            </children>
        </component>


        <component id="board">        
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <animations></animations>
            <materials>
                <material id="black" />
            </materials>
            <texture id="none"/>   
            <children>
                <primitiveref id="board" />
            </children>
        </component>

        <component id="tableCube">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="retangleT1" />
                <componentref id="retangle2" />
                <componentref id="retangle3" />
                <componentref id="retangleT4" />
                <componentref id="retangleT5" />
                <componentref id="retangleT6" />
            </children>
        </component>
    
        <component id="tableTop">
            <transformation>
                <translate x="3" y="3" z="2" />
                <scale x="6.5" y="0.2" z="4.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="tableCube" />
            </children>
        </component>

        
        
        <!--Table Legs-->
        <component id="tableLegs">
            <transformation>
                <scale x="0.2" y="1" z="0.2" />
                
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="leg1" />
                <componentref id="leg2" />
                <componentref id="leg3" />
                <componentref id="leg4" />
            </children>
        </component>
        


         

       <component id="table">
            <transformation>
                <scale x="2.5" y="2" z="2" />
                <rotate axis="x" angle="90" />
                <rotate axis="y" angle="90" />
                <translate x="-5" y="-3.2" z="-1.2" />


            </transformation>
            <materials>
                <material id="woodMaterial" />
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <componentref id="tableTop" />
                <componentref id="tableLegs" />            </children>
        </component>

        <component id="scene">
            <transformation>
                <translate x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                
              <componentref id="table"/>
            <componentref id="board_comp"/>

            </children>
        </component>

     
       
        <!--END OF SCENE-->
    </components>
</lxs>