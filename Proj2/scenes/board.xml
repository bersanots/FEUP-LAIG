        <spot id="top_light" enabled="0" angle="55" exponent="40">
            <location x="10" y="7" z="10" w="0" />
            <target x="0" y="0" z="0" />
            <ambient r="0" g="0" b="0" a="0"/>
            <diffuse r="0.5" g="0.5" b="0.5" a="0"/>
            <specular r="0.5" g="0.5" b="0.5" a="0"/>
